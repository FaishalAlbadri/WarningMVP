<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.faishalbadri.hijab.ui.video.activity.VideoActivity">

  <include
    android:id="@+id/toolbar_activity_video"
    layout="@layout/general_toolbar_search"/>

  <LinearLayout
    android:id="@+id/linear_layout_tab_activity_video"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar_activity_video"
    >

    <Button
      android:id="@+id/button_video_activity_video"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:padding="@dimen/padding_widget"
      android:background="?attr/selectableItemBackground"
      android:drawableTop="@drawable/ic_video_white"
      android:text="@string/caption_videos"
      android:textAllCaps="false"
      android:textColor="@android:color/white"
      />

    <Button
      android:id="@+id/button_category_activity_video"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:padding="@dimen/padding_widget"
      android:background="?attr/selectableItemBackground"
      android:drawableTop="@drawable/ic_category_white"
      android:text="@string/caption_category"
      android:textAllCaps="false"
      android:textColor="@android:color/white"
      />

  </LinearLayout>

  <FrameLayout
    android:id="@+id/framelayout_for_fragment_activity_video"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/match_parent_size"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linear_layout_tab_activity_video"/>

</android.support.constraint.ConstraintLayout>
