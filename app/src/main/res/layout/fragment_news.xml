<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/refresh_fragment_news"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.faishalbadri.hijab.ui.news.fragment.news.NewsFragment">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.faishalbadri.hijab.aaa_migration_server.util.slider.SliderLayout
        android:id="@+id/slider_fragment_news"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slider_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/padding_widget"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"/>

      <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_fragment_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/slider_fragment_news"
        android:nestedScrollingEnabled="false"/>

    </RelativeLayout>

  </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>

