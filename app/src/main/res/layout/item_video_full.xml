<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="10dp">

  <com.google.android.youtube.player.YouTubeThumbnailView
    android:id="@+id/thumbnail_view_video_item"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/imageview_grid_ebook_size"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/txt_title_item_video"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_dp"
    android:maxLines="2"
    android:textColor="@color/color_white_ff"
    android:textSize="@dimen/normal_tittle_text_size_detail"
    app:layout_constraintLeft_toLeftOf="@+id/thumbnail_view_video_item"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@+id/thumbnail_view_video_item" />

  <TextView
    android:id="@+id/txt_duration_item_video"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_dp"
    android:background="@color/color_background_duration"
    android:textColor="@android:color/white"
    app:layout_constraintBottom_toBottomOf="@+id/thumbnail_view_video_item"
    app:layout_constraintRight_toRightOf="@+id/thumbnail_view_video_item" />

</android.support.constraint.ConstraintLayout>