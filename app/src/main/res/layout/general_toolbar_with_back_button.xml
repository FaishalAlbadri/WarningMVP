<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="?attr/actionBarSize"
  android:background="@color/colorPrimary"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/button_back_general_toolbar_with_back_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:padding="@dimen/padding_widget_size_normal_bar"
    android:background="?attr/selectableItemBackground"
    android:src="@drawable/ic_back_white" />

  <TextView
    android:id="@+id/textview_general_toolbar_with_back_button"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_marginLeft="@dimen/padding_widget"
    android:padding="@dimen/padding_widget"
    android:gravity="center_vertical"
    android:textColor="@android:color/white"
    android:textSize="@dimen/toolbar_title_text_size" />

</LinearLayout>

