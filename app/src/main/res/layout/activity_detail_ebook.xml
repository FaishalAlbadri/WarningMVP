<?xml version="1.0" encoding="utf-8"?>
<com.gw.swipeback.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/swipe_back_detail_ebook"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.faishalbadri.hijab.ui.detail.ebook.DetailEbookActivity">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include
      android:id="@+id/toolbar_activity_detail_ebook"
      layout="@layout/general_toolbar_with_back_button"/>

    <ImageView
      android:id="@+id/imageview_detail_ebook"
      android:layout_width="150dp"
      android:layout_height="200dp"
      android:layout_margin="@dimen/padding_widget"
      android:scaleType="fitCenter"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar_activity_detail_ebook"/>

    <TextView
      android:id="@+id/textview_title_detal_ebook"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:padding="@dimen/padding_widget"
      android:maxLines="4"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/normal_tittle_text_size"
      app:layout_constraintLeft_toRightOf="@+id/imageview_detail_ebook"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar_activity_detail_ebook"/>

    <TextView
      android:id="@+id/textview_writer_detail_ebook"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:padding="@dimen/padding_widget"
      android:lines="1"
      android:textColor="@color/colorPrimary"
      app:layout_constraintLeft_toRightOf="@+id/imageview_detail_ebook"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textview_title_detal_ebook"/>

    <TextView
      android:id="@+id/textview_publisher_detail_ebook"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:padding="@dimen/padding_widget"
      android:lines="1"
      android:textColor="@color/colorPrimary"
      app:layout_constraintLeft_toRightOf="@+id/imageview_detail_ebook"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textview_writer_detail_ebook"/>

    <TextView
      android:id="@+id/textview_time_detail_ebook"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:padding="@dimen/padding_widget"
      android:lines="1"
      android:textColor="@color/colorPrimary"
      app:layout_constraintLeft_toRightOf="@+id/imageview_detail_ebook"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textview_publisher_detail_ebook"/>

    <Button
      android:id="@+id/button_read_ebok_detail_ebook"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/padding_widget"
      android:background="@drawable/background_custom_border_layout_primary_color"
      android:text="Baca Buku Ini"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/normal_tittle_text_size"
      app:layout_constraintBottom_toBottomOf="@+id/imageview_detail_ebook"
      app:layout_constraintLeft_toRightOf="@+id/imageview_detail_ebook"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textview_time_detail_ebook"/>

    <WebView
      android:id="@+id/web_view_description_ebook_detail"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_margin="@dimen/padding_widget"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageview_detail_ebook"/>

  </android.support.constraint.ConstraintLayout>

</com.gw.swipeback.SwipeBackLayout>
