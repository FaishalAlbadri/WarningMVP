<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.faishalbadri.hijab.ui.news_by_category.NewsByCategoryActivity">

  <include
    android:id="@+id/toolbar_activity_news_by_category"
    layout="@layout/general_toolbar_with_back_button" />

  <android.support.v7.widget.RecyclerView
    android:id="@+id/recyclerview_activity_news_by_category"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/match_parent_size"
    tools:item="fra"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar_activity_news_by_category" />

</android.support.constraint.ConstraintLayout>
