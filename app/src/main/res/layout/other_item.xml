<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:id="@+id/card_view_other_item"
  android:layout_height="@dimen/card_account"
  android:layout_margin="2dp">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/img_title_other_item"
      android:layout_width="100dp"
      android:layout_height="0dp"
      android:scaleType="fitXY"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/textview_title_other_item"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:gravity="center"
      android:text="@string/app_name"
      android:textColor="@color/colorPrimaryDark"
      android:textSize="@dimen/normal_tittle_text_size"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/img_title_other_item"
      app:layout_constraintRight_toLeftOf="@+id/img_next_other_item"
      app:layout_constraintTop_toTopOf="parent" />

    <ImageView
      android:id="@+id/img_next_other_item"
      android:layout_width="50dp"
      android:layout_height="0dp"
      android:src="@drawable/ic_next"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>