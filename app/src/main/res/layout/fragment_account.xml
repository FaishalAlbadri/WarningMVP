<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.faishalbadri.hijab.ui.home.fragment.account.AccountFragment">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/img_user_account"
    android:layout_width="@dimen/image_size"
    android:layout_height="@dimen/image_size"
    android:layout_marginBottom="@dimen/margin_widget"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    app:layout_constraintBottom_toTopOf="@+id/cvUser"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent" />

  <ImageView
    android:id="@+id/img_edit_photo_account"
    android:layout_width="@dimen/mini_img_size"
    android:layout_height="@dimen/mini_img_size"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:src="@drawable/ic_photo_camera_primary_color"
    app:layout_constraintBottom_toBottomOf="@+id/img_user_account"
    app:layout_constraintRight_toRightOf="@+id/img_user_account" />

  <android.support.v7.widget.CardView
    android:id="@+id/cvUser"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/card_account"
    android:layout_margin="@dimen/margin_widget"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="@dimen/margin_widget">

      <TextView
        android:id="@+id/usernamedummy"
        android:layout_width="@dimen/match_parent_size"
        android:layout_height="wrap_content"
        android:text="@string/text_name_with_dot"
        android:textSize="@dimen/normal_tittle_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/txt_username_user_account"
        android:layout_width="@dimen/match_parent_size"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_widget"
        android:layout_marginRight="@dimen/padding_widget"
        android:maxLines="1"
        android:textSize="@dimen/normal_tittle_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/usernamedummy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:id="@+id/carddummy"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/card_account"
    android:layout_margin="@dimen/margin_widget"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cvUser">

    <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="@dimen/margin_widget">

      <TextView
        android:id="@+id/emaildummy"
        android:layout_width="@dimen/match_parent_size"
        android:layout_height="wrap_content"
        android:text="@string/text_email_with_dot"
        android:textSize="@dimen/normal_tittle_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/txt_email_user_account"
        android:layout_width="@dimen/match_parent_size"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_widget"
        android:layout_marginRight="@dimen/padding_widget"
        android:maxLines="1"
        android:textSize="@dimen/normal_tittle_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/emaildummy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/card_account"
    android:layout_marginTop="@dimen/margin_widget"
    app:cardElevation="@dimen/match_parent_size"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/carddummy">

    <Button
      android:id="@+id/btn_logout_account"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="?attr/selectableItemBackground"
      android:text="@string/text_logout"
      android:textColor="@color/colorPrimary" />

  </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
