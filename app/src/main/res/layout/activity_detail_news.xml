<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.faishalbadri.hijab.ui.detail_video.news.DetailNewsActivity">

  <include
    android:id="@+id/toolbar_activity_detail_news"
    layout="@layout/general_toolbar_with_back_button" />

  <ScrollView
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/match_parent_size"
    android:nestedScrollingEnabled="false"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar_activity_detail_news">

    <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
        android:id="@+id/txt_title_news_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_widget"
        android:maxLines="3"
        android:text="@string/hello_blank_fragment"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_tittle_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <ImageView
        android:id="@+id/img_detail_news"
        android:layout_width="@dimen/match_parent_size"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_news_detail" />




    </android.support.constraint.ConstraintLayout>

  </ScrollView>


</android.support.constraint.ConstraintLayout>
