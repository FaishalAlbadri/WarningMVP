<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cardview_news_fragment_news"
  android:layout_width="match_parent"
  android:layout_height="100dp"
  android:layout_marginTop="@dimen/two"
  android:layout_marginBottom="@dimen/two">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
      android:id="@+id/imageview_news_item"
      android:layout_width="120dp"
      android:layout_height="@dimen/match_parent_size"
      android:scaleType="centerCrop"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/textview_title_news_item"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:ellipsize="end"
      android:gravity="top"
      android:lines="5"
      android:maxLines="5"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/normal_tittle_text_size"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/imageview_news_item"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>