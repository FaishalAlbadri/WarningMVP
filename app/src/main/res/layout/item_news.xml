<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cardview_news_fragment_news"
  android:layout_width="match_parent"
  android:layout_height="@dimen/cardview_size"
  android:layout_marginTop="@dimen/padding_widget"
  android:layout_marginBottom="@dimen/padding_widget">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/imageview_news_item"
      android:layout_width="@dimen/image_size"
      android:layout_height="@dimen/match_parent_size"
      android:scaleType="fitXY"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/textview_title_news_item"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:padding="@dimen/padding_widget"
      android:ellipsize="end"
      android:lines="4"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/normal_tittle_text_size"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/imageview_news_item"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>