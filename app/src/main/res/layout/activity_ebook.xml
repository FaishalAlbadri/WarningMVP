<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.faishalbadri.hijab.ui.ebook.EbookActivity">

  <include
    android:id="@+id/toolbar_activity_ebook"
    layout="@layout/general_toolbar_with_button"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/recyclerview_activity_ebook"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/match_parent_size"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar_activity_ebook"
    app:layout_constraintBottom_toBottomOf="parent">

  </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
