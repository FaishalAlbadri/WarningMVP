<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="18dp"
  android:background="@color/color_white_ff">

  <ImageView
    android:id="@+id/imageview_list_about"
    android:layout_width="0dp"
    android:layout_height="210dp"
    android:scaleType="fitXY"
    android:src="@drawable/text_pink_fame_primary"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <android.support.constraint.Guideline
    android:id="@+id/guideline_center_vertical_about_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintBottom_toTopOf="parent"
    app:layout_constraintGuide_percent="0.5"/>

  <TextView
    android:id="@+id/textview_list_about"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:textColor="@color/color_black"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageview_list_about"/>

</android.support.constraint.ConstraintLayout>