<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/card_view_category_item"
  android:layout_width="match_parent"
  android:layout_height="@dimen/card_account"
  android:layout_margin="@dimen/margin_other_item">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/textview_title_category_item"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:padding="@dimen/ten_dp"
      android:gravity="center_vertical"
      android:textColor="@color/colorPrimary"
      android:textSize="@dimen/normal_tittle_text_size" />

    <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="7"
      android:padding="@dimen/ten_dp"
      android:src="@drawable/ic_next_primary_color" />

  </LinearLayout>

</android.support.v7.widget.CardView>