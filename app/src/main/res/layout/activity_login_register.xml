<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background_main_primary_color"
  tools:context="com.faishalbadri.hijab.ui.login_register.LoginRegisterActivity">

  <FrameLayout
    android:id="@+id/framelayout_for_fragment_activity_login_register"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/match_parent_size"
    app:layout_constraintBottom_toTopOf="@+id/view_activity_login_register"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <View
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@color/colorPrimary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/view_activity_login_register"
    />

  <View
    android:id="@+id/view_activity_login_register"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/view_size"
    android:background="@color/color_white_ff"
    app:layout_constraintBottom_toTopOf="@+id/button_login_activity_login_register"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

  <Button
    android:id="@+id/button_login_activity_login_register"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/normal_button_size"
    android:padding="@dimen/margin_widget"
    android:background="?attr/selectableItemBackground"
    android:text="@string/text_login"
    android:textAllCaps="false"
    android:textColor="@color/color_white_ff"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/view_activity_login_register_center"/>

  <View
    android:id="@+id/view_activity_login_register_center"
    android:layout_width="@dimen/view_size"
    android:layout_height="@dimen/match_parent_size"
    android:background="@color/color_white_ff"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/view_activity_login_register"/>

  <View
    android:id="@+id/view_segment_login"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/normal_button_size"
    android:background="@color/color_grey_oppacity_37"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/view_activity_login_register_center"/>

  <View
    android:id="@+id/view_segment_register"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/normal_button_size"
    android:background="@color/color_grey_oppacity_37"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/view_activity_login_register_center"
    app:layout_constraintRight_toRightOf="parent"/>

  <Button
    android:id="@+id/button_register_activity_login_register"
    android:layout_width="@dimen/match_parent_size"
    android:layout_height="@dimen/normal_button_size"
    android:padding="@dimen/margin_widget"
    android:background="?attr/selectableItemBackground"
    android:text="@string/text_register"
    android:textAllCaps="false"
    android:textColor="@color/color_white_ff"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@+id/view_activity_login_register_center"
    app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>