<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/padding_widget_size_normal_bar">

  <ImageView
    android:id="@+id/imageview_detail_video_grid"
    android:layout_width="160dp"
    android:layout_height="130dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:scaleType="centerCrop"/>

  <TextView
    android:id="@+id/txt_title_detail_video_grid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_widget_size_normal_bar"
    android:ellipsize="end"
    android:maxLines="2"
    android:textColor="@android:color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageview_detail_video_grid"/>


</android.support.constraint.ConstraintLayout>