<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/constraint_item_contact_us"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="@dimen/fab_margin"
  android:paddingBottom="@dimen/fab_margin"
  android:background="@color/color_white_ff">

  <ImageView
    android:id="@+id/imageview_small_list_contact_us"
    android:layout_width="0dp"
    android:layout_height="80dp"
    android:src="@drawable/text_pink_fame_white"
    android:visibility="gone"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="@+id/guideline_center_vetical_list_contact_us"
    app:layout_constraintTop_toTopOf="parent"
    />

  <android.support.constraint.Guideline
    android:id="@+id/guideline_center_vetical_list_contact_us"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>

  <ImageView
    android:id="@+id/imageview_list_contact_us"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:src="@drawable/ic_donations"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <TextView
    android:id="@+id/textview_small_list_contact_us"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:textColor="@color/color_white_ff"
    android:visibility="gone"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageview_small_list_contact_us"/>

  <TextView
    android:id="@+id/textview_list_contact_us"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fab_margin"
    android:textColor="@color/colorPrimary"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageview_list_contact_us"/>

</android.support.constraint.ConstraintLayout>