<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <android.support.v7.widget.CardView
    android:id="@+id/card_view_video_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
        android:id="@+id/img_list_video"
        android:layout_width="@dimen/imageview_list_video_width"
        android:layout_height="@dimen/imageview_list_video_height"
        android:layout_marginTop="@dimen/padding_widget"
        android:layout_marginBottom="@dimen/padding_widget"
        android:layout_marginLeft="@dimen/ten_dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/txtJudulListVideo"
        android:layout_width="@dimen/match_parent_size"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dp"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_tittle_text_size_detail"
        app:layout_constraintLeft_toRightOf="@+id/img_list_video"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/txt_duration_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_widget"
        android:background="@color/color_background_duration"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/img_list_video"
        app:layout_constraintRight_toRightOf="@+id/img_list_video" />

    </android.support.constraint.ConstraintLayout>

  </android.support.v7.widget.CardView>

</RelativeLayout>